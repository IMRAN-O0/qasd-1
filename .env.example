# Production Environment Configuration

# Application Settings
NODE_ENV=production
VITE_APP_NAME=QASD - Quality Assurance System Dashboard
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Enterprise Quality Assurance and Document Management System

# API Configuration
VITE_API_BASE_URL=https://api.your-domain.com
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Authentication
VITE_AUTH_TOKEN_KEY=qasd_auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=qasd_refresh_token
VITE_AUTH_SESSION_TIMEOUT=3600000
VITE_AUTH_REMEMBER_ME_DURATION=2592000000

# Security Settings
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true
VITE_CSRF_PROTECTION=true
VITE_XSS_PROTECTION=true
VITE_CONTENT_SECURITY_POLICY=true

# Performance Settings
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true
VITE_CACHE_DURATION=86400
VITE_ENABLE_SERVICE_WORKER=true
VITE_ENABLE_LAZY_LOADING=true

# Monitoring & Analytics
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_ENABLE_ERROR_TRACKING=false
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME_UPDATES=true
VITE_ENABLE_ADVANCED_ANALYTICS=true

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Database Configuration (Backend)
DB_TYPE=sqlite
DB_PATH=./data/qasd.db
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24

# Email Configuration (Backend)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@domain.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@your-domain.com

# JWT Configuration (Backend)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration (Backend)
PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:5173

# Logging Configuration (Backend)
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true

# Rate Limiting (Backend)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (Backend)
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif
UPLOAD_PATH=./uploads

# Backup Configuration (Backend)
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups